<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MappingApp.View.MainView">
  <StackLayout>
    <Label Text="{Binding Heading}" VerticalOptions="Center" HorizontalOptions="Center" />
    <Button Text="Mapping Application" Command="{Binding NavigateToMappingView}"/>
    <Button Text="Navigation" Command="{Binding NavigateToNavigationView}"/>
    <Button Text="Communication Systems" Command="{Binding NavigateToCommunicationView}"/>
    <Button Text="Code Scanner" Command="{Binding NavigateToCodeView}"/>
    <Button Text="Computer Vision" Command="{Binding NavigateToComputerView}"/>
  </StackLayout>
</ContentPage>